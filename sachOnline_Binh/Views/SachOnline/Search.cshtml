@model IEnumerable<SACH>
<style>
    /* Định dạng cho bảng */
    table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #ddd;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    /* Định dạng cho hàng chẵn */
    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    /* Định dạng cho hàng hover (di chuột vào) */
    tr:hover {
        background-color: #ddd;
    }
</style>

@if (Model != null)
{
    <table>
        <tr>
            <th>Tensach</th>
            <th>GiaBan</th>
            <th>Mota</th>
            <th>AnhBia</th>
            <th>NgayCapNhat</th>
            <th>SoLuongBan</th>
            <th>MaCD</th>
            <th>MaNXB</th>
        </tr>

        @foreach (var i in Model)
        {

            <tr>
                <td>@i.TenSach</td>
                <td>@i.GiaBan</td>
                <td>@i.MoTa</td>
                <td>@i.AnhBia</td>
                <td>@i.NgayCapNhat</td>
                <td>@i.SoLuongBan</td>
                <td>@i.MaCD</td>
                <td>@i.MaNXB</td>
            </tr>
        }
    </table>
}