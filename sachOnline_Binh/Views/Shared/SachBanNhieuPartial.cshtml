@model List<SACH>

@helper Truncate(string s, int length)
{
    if (s.Length < length)
    {
        @s
    }
    else
    {
        @s.Substring(0, length)<text> ... </text>
    }
}


<div class="container">
    <h2 class="text-center">SÁCH BÁN NHIỀU</h2>
    <div class="row">
        @foreach (var sach in Model)
        {
            <div class="col-lg-6 col-md-6">
                <div class="media-object-default">
                    <div class="media">
                        <div class="media-left">
                            <a href="@Url.Action("ChiTietSach","SachOnline", new { id = sach.MaSach})">
                                <img class="media-object imgsachbannhieu"
                                     src="~/Images/@sach.AnhBia" alt="placeholder image">
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">@sach.TenSach</h4>
                            <p>@Truncate(sach.MoTa, 190)</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <hr>
</div>
